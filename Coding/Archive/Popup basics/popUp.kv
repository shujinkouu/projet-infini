#:kivy 1.1

<Main Layout>:
#    orientation: "vertical"
    Button:
        text: "Input Name"
        on_press: root.setName(*args)
    Label:
        text: root.fullName

<SetNamePopup>:
    title: "Set Name"
    size_hint: .5, .5
    auto_dismiss: False
    GridLayout:
        cols: 2
        Label:
            text: "Salutation"
        TextInput:
            id: lblsal
            write_tab: False
        Label:
            text: "First Name"
        TextInput:
            id: lblfName
            write_tab: False
        Label:
            text: "Last Name"
        TextInput:
            id: lbllName
            write_tab: False
        Button:
            size_hint_y: .3
            text: "Change"
            on_press:
                app.root.fullName=lblsal.text+" "+lbfName.text+" "+lbllName.text
                root.dismiss()
        Button:
            size_hint_y: .3
            text: "Cancel"
            on_press: root.dismiss()